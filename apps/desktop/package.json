{
  "name": "eve-gatekeeper-desktop",
  "version": "1.0.0",
  "description": "EVE Gatekeeper Desktop - Intel & Route Planning for EVE Online",
  "main": "src/main.js",
  "author": "AreteDriver",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:web && electron-builder",
    "build:web": "cd ../mobile && npx expo export --platform web && cp -r dist ../desktop/web-build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.evegatekeeper.desktop",
    "productName": "EVE Gatekeeper",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "web-build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "assets"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  }
}
